                        </div>
                      
                         
                        <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab"></div>
                            <h1>Pizzeria </h1>
                            <div class="row">
                         {% for restaurant in restaurantP %}
                         {% include 'main/restaurant.html.twig' %}
                        {% endfor %}
                        </div>
                        </div>

                </div>
                <!-- End Nav Card -->
            </div>
        </section>
 

{% endblock %}
