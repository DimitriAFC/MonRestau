{% extends 'base.html.twig' %}

{% block title %}ZipCode index{% endblock %}

{% block body %}
    <h1>ZipCode index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for zip_code in zip_codes %}
            <tr>
                <td>{{ zip_code.id }}</td>
                <td>{{ zip_code.number }}</td>
                <td>
                    <a href="{{ path('zip_code_show', {'id': zip_code.id}) }}">show</a>
                    <a href="{{ path('zip_code_edit', {'id': zip_code.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('zip_code_new') }}">Create new</a>
{% endblock %}
